@using Core_Project.Model;
@model IEnumerable<IPPurchaseModel>

<link href="../../Content/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">


    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">View Purchase</h4>
                @*<h1 class="viewclient-heading">@Html.ActionLink("Add Client", "AddClient", "IPClients")</h1>*@

            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Html.ActionLink("Add Purchase", "CreatePurchase", "Purchase")</h5>
                        <br />
                        <div class="table-responsive">
                            <table id="zero_config" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                      
                                        <th>Status</th>
                                        <th>Purchase</th>
                                        <th>Created</th>
                                        <th>Due Date</th>                                     
                                        <th>Client Name</th>
                                        <th>Amount</th>
                                        <th>Balance</th>
                                        
                                        <th>Option</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            @switch (item.quote_status_id)
                                            {

                                                case 0:
                                                default:
                                                    <td>

                                                        Draft
                                                    </td>
                                                    break;
                                                case 1:
                                                <td>

                                                    Sent
                                                </td>
                                                    break;
                                                case 2:
                                                <td>

                                                    Viewed
                                                </td>
                                                    break;
                                                case 3:
                                                <td>

                                                    Approved
                                                </td>
                                                    break;
                                                case 4:
                                                <td>

                                                    Rejected
                                                </td>
                                                    break;
                                                case 5:
                                                <td>

                                                    Canceled
                                                </td>
                                                    break;

                                            }


                                            <td>
                                                @item.quote_id
                                            </td>
                                            <td>
                                                @item.quote_date_created.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                @item.quote_date_modified.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                @item.client_name
                                            </td>

                                            <td>
                                                @item.quote_total
                                            </td>
                                            
                                            <td></td>
                                            <td>
                                                <div class="options btn-group open option-dropdown">
                                                    <a class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="true">
                                                        <i class="fa fa-cog"></i> Options
                                                    </a>
                                                    <ul class="dropdown-menu">
                                                       
                                                        <li>
                                                            <p>
                                                                <i class="fa fa-edit fa-margin"></i> <a href="/Purchase/Purchase/@item.quote_id">Edit</a>
                                                            </p>
                                                        </li>
                                                        <li>
                                                            <p>
                                                                <i class="fa fa-edit fa-margin"></i> <a href="/Purchase/Delete/@item.quote_id">Delete</a>
                                                            </p>
                                                        </li>
                                                        <li>
                                                            @*<p>
                                                                <i class="fa fa-file fa-margin"></i><a href="/Purchase/Export/">Print</a>
                                                            </p>*@
                                                        </li>

                                                        @* <li>
                                                                <a href="#" class="client-create-invoice" data-client-name="amd">
                                                                    <i class="fa fa-file-text fa-margin"></i> Create Invoice
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="http://amdsystems.in/billing/clients/delete/25" onclick="return confirm('If you delete this client you will also delete any invoices, quotes and payments related to this client. Are you sure you want to permanently delete this client?');">
                                                                    <i class="fa fa-trash-o fa-margin"></i> Delete
                                                                </a>
                                                            </li>*@
                                                    </ul>
                                                </div>
                                            </td>
                                            
                                        </tr>
                                    }

                                </tbody>
                               
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->



<script src="../../Content/assets/extra-libs/DataTables/datatables.min.js"></script>
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $('#zero_config').DataTable({
        columnDefs: [{ orderable: false, targets: [7] }]
    });
</script>