@using Core_Project.Model
@model IPQuotesModel

<form class="modal-content" id="formCreateQuote" method="post" action="/IPQuote/CreateEstimate">
    <div class="modal-header">
        <a data-dismiss="modal" class="close"><i class="fa fa-close"></i></a>

        <h3>Create Estimate</h3>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="client_name">Client</label>
            <select name="client_id" id="client_name" class="form-control select2-hidden-accessible" autofocus="autofocus" tabindex="-1" aria-hidden="true">
                <option value="1">amd</option>
            </select>
            <span class="select2 select2-container select2-container--default" dir="ltr" style="width: 622px;"><span class="selection"><span class="select2-selection select2-selection--single" role="combobox" aria-haspopup="true" aria-expanded="false" tabindex="0" aria-labelledby="select2-client_name-container"><span class="select2-selection__rendered" id="select2-client_name-container" title="amd">amd</span><span class="select2-selection__arrow" role="presentation"><b role="presentation"></b></span></span></span><span class="dropdown-wrapper" aria-hidden="true"></span></span>
        </div>

        <div class="form-group">

            <label for="quote_password">Created Date</label>
            <input type="date" name="quote_date_created" id="quote_date_created" class="form-control" value="02-Jun-2018">


        </div>

        <div class="form-group">
            <label for="quote_password">Quote PDF password (optional)</label>
            <input type="text" name="quote_password" id="quote_password" class="form-control" value="" style="margin: 0 auto;" autocomplete="off">
        </div>



        <div class="form-group">
            <label for="tax_rate_id">
                Tax Rate
            </label>

            <div class="controls">
                <select name="quote_tax_rate.tax_rate_id" id="tax_rate_id" class="form-control">
                    <option value="1">18.00% - storage</option>
                </select>
            </div>
        </div>

        @*<div class="form-group">
                <label for="include_item_tax">
                    Tax Rate Placement
                </label>

                <div class="controls">
                    <select name="include_item_tax" id="include_item_tax" class="form-control">
                        <option value="0">
                            Apply Before Item Tax
                        </option>
                        <option value="1">
                            Apply After Item Tax
                        </option>
                    </select>
                </div>
            </div>*@



        <div class="form-group">
            <label for="invoice_group_id">Invoice Group: </label>

            <div class="controls">
                <select name="invoice_group_id" id="invoice_group_id" class="form-control">
                    <option value="1">Invoice Default</option>
                    <option value="2" selected="selected">Quote Default</option>
                </select>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <div class="btn-group">
            <button class="btn btn-success ajax-loader" id="quote_create_confirm" type="button">
                <i class="fa fa-check"></i> Next
            </button>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        $('#quote_create_confirm').click(function () {
            $("#formCreateQuote").submit();
        });
    });
</script>